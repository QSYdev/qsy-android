<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/custom_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

    <LinearLayout
        android:id="@+id/custom_executor_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/choose_routine_tv"
            style="@style/FormTitle"
            android:text="@string/routine_title"/>

        <Spinner
            android:id="@+id/custom_routine_spinner"
            style="@style/FormFields"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true"/>

        <TextView
            android:id="@+id/custom_configs_tv"
            style="@style/FormTitle"
            android:text="@string/other_configs"/>

        <RelativeLayout
            android:id="@+id/custom_sound_rl"
            style="@style/FormFieldLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/custom_sound_sc"
                style="@style/FormSwitchCompat"
                android:enabled="false"
                android:text="@string/routine_sound"/>

            <TextView
                android:id="@+id/custom_sound_tv"
                style="@style/FormFieldDescription"
                android:layout_alignBottom="@+id/custom_sound_sc"
                android:text="@string/sound_description"/>

        </RelativeLayout>

        <View style="@style/FormDivider"/>

        <LinearLayout
            android:id="@+id/routine_info_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/routine_info_tv"
                style="@style/FormTitle"
                android:text="@string/routine_info"/>

            <TextView
                android:id="@+id/custom_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FormFields"/>

            <TextView
                android:id="@+id/custom_number_of_nodes"
                style="@style/CustomFormInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/custom_number_of_steps"
                style="@style/CustomFormInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/custom_total_time_out"
                style="@style/CustomFormInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <Button
            android:id="@+id/start_custom_routine"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:text="@string/start_routine"/>

    </LinearLayout>
</ScrollView>
