<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@android:color/holo_blue_light</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@android:color/holo_blue_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@android:color/holo_blue_bright</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FormTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/form_title_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/form_title_margin_left</item>
        <item name="android:layout_marginTop">@dimen/form_title_margin_top</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/preference_fallback_accent_color</item>
        <item name="android:textSize">@dimen/form_separator_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="FormDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/faded_gray</item>
    </style>

    <style name="FormFields">
        <item name="android:paddingLeft">@dimen/form_field_padding_left</item>
        <item name="android:paddingRight">@dimen/form_field_padding_right</item>
        <item name="android:paddingTop">@dimen/form_field_padding_top</item>
        <item name="android:paddingBottom">@dimen/form_field_padding_bottom</item>
        <item name="android:textColor">@color/form_fields_text_color</item>
        <item name="android:textSize">@dimen/form_text_size</item>
    </style>

    <style name="FormSwitchCompat" parent="FormFields">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FormButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:paddingLeft">@dimen/form_field_padding_left</item>
        <item name="android:paddingRight">@dimen/form_field_padding_right</item>
    </style>

    <style name="PlayerColorLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">@dimen/player_layout_margin_left</item>
        <item name="android:layout_marginRight">@dimen/player_layout_margin_right</item>
        <item name="android:layout_marginTop">@dimen/player_layout_margin_top</item>
    </style>

    <style name="PlayerColorField">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/player_color_field_padding_left</item>
        <item name="android:paddingRight">@dimen/player_color_field_padding_right</item>
        <item name="android:textSize">@dimen/player_form_text_size</item>
        <item name="android:textColor">@color/form_fields_text_color</item>
    </style>

    <style name="FormFieldLayout">
        <item name="android:layout_marginBottom">@dimen/form_field_padding_bottom</item>
    </style>

    <style name="FormFieldDescription">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/form_field_text_description</item>
        <item name="android:paddingStart">9dp</item>
    </style>

</resources>
